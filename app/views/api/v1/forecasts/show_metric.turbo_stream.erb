<%= turbo_stream.replace "forecast-results" do %>
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Weather Forecast</h2>
      <p class="text-gray-600">
        <strong>Location:</strong> <%= @forecast[:location] %><br>
        <strong>Units:</strong> Metric (°C, km/h, mm)
      </p>
    </div>

    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @forecast[:forecast_days].each do |day| %>
        <div class="bg-gray-50 rounded-lg p-4">
          <div class="text-center mb-3">
            <h3 class="font-semibold text-lg text-gray-900"><%= day[:date] %></h3>
            <p class="text-sm text-gray-600"><%= day[:day] %></p>
          </div>

          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-600">High:</span>
              <span class="font-medium"><%= day[:maxtemp_c] %>°C</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Low:</span>
              <span class="font-medium"><%= day[:mintemp_c] %>°C</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Condition:</span>
              <span class="font-medium"><%= day[:condition] %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Humidity:</span>
              <span class="font-medium"><%= day[:avghumidity] %>%</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Wind:</span>
              <span class="font-medium"><%= day[:maxwind_kph] %> km/h</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Rain:</span>
              <span class="font-medium"><%= day[:totalprecip_mm] %> mm</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
