<%
  error_details = ""
  if defined?(body) && body.present?
    if body['errors']
      error_list = body['errors'].map { |field, reason| "<li>#{field}: #{reason.join(", ")}</li>" }
      error_details = "<ul>#{error_list.join}</ul>"
    elsif body['error']
      error_details = "<ul><li>#{body['error']}</li></ul>"
    end
  end
%>

<div class="mt-6 bg-red-50 border border-red-200 rounded-lg p-4 mx-auto max-w-md">
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <!-- Error Icon -->
      <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <h3 class="text-sm font-medium text-red-800">
        Error Getting Forecast<%= defined?(status_code) && status_code.present? ? " (#{status_code})" : "" %>
      </h3>
      <div class="mt-2 text-sm text-red-700">
        <% if error_details.present? %>
          <div class="mt-2"><%= error_details.html_safe %></div>
        <% else %>
          <p><%= error_message %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
